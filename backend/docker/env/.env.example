# Context-Space-Backend Environment Variables

# Server Configuration
SERVER_ADDRESS=:8080
SERVER_TLS_ENABLED=false
SERVER_TLS_CERT_FILE=
SERVER_TLS_KEY_FILE=

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=contextspace
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=myroot
VAULT_SECRET_PATH=secret/context-space
VAULT_DATA_DIR=/data/vault

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Provider Configuration
PROVIDER_CONFIG_PATH=configs/providers

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=context-space-backend
